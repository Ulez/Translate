<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pop_view_content_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_blue_grey_700"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_pop_src"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/leftmargin2"
        android:layout_marginTop="@dimen/leftmargin2"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_pronounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tv_word"
            android:textColor="@android:color/white"
            tools:text="[wɑ:t]" />

        <TextView
            android:id="@+id/tv_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="left"
            android:includeFontPadding="false"
            android:textColor="@android:color/white"
            android:textColorHint="@color/md_blue_grey_500"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/tv_pronounce"
            android:textColor="@android:color/white"
            android:visibility="visible"
            tools:text="查词中..."
            tools:visibility="visible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_Explains"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_pop_src"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/leftmargin2"
        android:layout_marginRight="@dimen/leftmargin2"
        android:layout_marginTop="@dimen/leftmargin2"
        android:text="@string/app_name"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/im_hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_Explains"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/hide"
        android:visibility="gone" />
</RelativeLayout>

